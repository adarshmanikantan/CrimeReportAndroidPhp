<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adarsh.crimereportandroidphp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CrimeReportAndroidPhp"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.police.ViewPCCDetailsPoliceActivity"></activity>
        <activity android:name=".ui.police.ui.ViewPccDetailActivity" />
        <activity android:name=".ui.citizen.complaint.ViewFirActivity" />
        <activity android:name=".ui.police.EncryptedPoliceComplaintActivity" />
        <activity android:name=".ui.police.ui.ViewPccByPolice" />
        <activity android:name=".ui.police.ui.ViewComplaintsByPolice" />
        <activity android:name=".ui.police.PoliceHome" />
        <activity android:name=".ui.police.GenerateFirActivity" />
        <activity android:name=".ui.citizen.complaint.EncryptedComplaintActivity" />
        <activity android:name=".ui.citizen.complaint.ViewComplaintActivity" />
        <activity android:name=".ui.citizen.pcc.RequestPCCActivity" />
        <activity android:name=".ui.citizen.complaint.FileComplaintActivity" />
        <activity
            android:name=".ui.citizen.CitizenHome"
            android:label="@string/title_activity_citizen_home"
            android:theme="@style/Theme.CrimeReportAndroidPhp.NoActionBar" />
        <activity android:name=".ui.citizen.SignUpActivity" />
        <activity android:name=".util.AadharScannerActivity" />
        <activity
            android:name=".ui.LoginHome"
            android:label="@string/title_activity_login_home" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>